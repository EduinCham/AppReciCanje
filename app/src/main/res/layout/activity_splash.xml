<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout



    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SplashActivity">


    <RelativeLayout


        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        >

        <ImageView


            android:layout_width="362sp"
            android:layout_height="362sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/elipse"

            />

        <ImageView


            android:layout_width="252sp"
            android:layout_height="61sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/logotipo"

            />

        <ImageView

            android:id="@+id/ivSplashBottom"
            android:layout_width="432dp"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/group"
            />



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>